sudo docker build -t ms-frontend:1.0 frontend
sudo docker build -t ms-products:1.0 products
sudo docker build -t ms-shopping-cart:1.0 shopping-cart
sudo docker network create my-network
sudo docker run --name shopping --network=my-network -p 3002:3002 -d ms-shopping-cart:1.0
sudo docker run --name products --network=my-network -p 3001:3001 -d ms-products:1.0 
sudo docker run --name frontend -d -p 3000:3000 -e PRODUCTS_SERVICE=products -e SHOPPING_CART_SERVICE=shopping --network my-network ms-frontend:1.0
sudo docker network inspect my-network